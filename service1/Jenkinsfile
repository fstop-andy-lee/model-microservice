pipeline {
    agent {
     label "jenkins=slave"
    }
	
    tools
    {
       maven "Maven3"
    }
    environment {
	  DOCKERHUB_TOKEN = credentials('dockerhub-token')
	  IMAGE_NAME = 'andylee1973/service1'
	  CTS = sh(script:'date +%Y-%m-%dT%H:%M:00Z', returnStdout: true).trim()
	  
	}
    stages {
      stage('Checkout Source') {
           steps {             
                git branch: 'develop', url: 'https://github.com/fstop-andy-lee/model-microservice.git'        
          }
        }
	stage('Execute Maven') {
	       environment {
                VERSION = sh(script:'cd ./service1 && mvn org.apache.maven.plugins:maven-help-plugin:3.1.0:evaluate -Dexpression=project.version -q -DforceStdout', returnStdout: true).trim()
           }
           steps {  
                sh 'mvn clean package -DskipTests'             
                sh 'rm ./service1/src/environment/docker/lib/dummy'
                sh 'cp ./service1/target/service1-${VERSION}.jar ./service1/src/environment/docker/lib/.'
                sh 'cp ./service1/src/main/resources/*.yml ./service1/src/environment/docker/conf/.'
                sh 'whoami'
                sh 'env'
          }
        }
    stage('Docker Build and Tag') {
           environment {
                VERSION = sh(script:'cd ./service1 && mvn org.apache.maven.plugins:maven-help-plugin:3.1.0:evaluate -Dexpression=project.version -q -DforceStdout', returnStdout: true).trim()
           }
           steps {  
                sh 'docker build --build-arg JAR_NAME=service1-${VERSION}.jar -t ${IMAGE_NAME} service1/src/environment/docker'   
                sh 'docker tag ${IMAGE_NAME} ${IMAGE_NAME}:latest'
          }
        }
     
    stage('Publish image to Docker Hub') {
           steps {
               withDockerRegistry([ credentialsId: "dockerhub-credential", url: "" ]) {
                 sh  'docker push ${IMAGE_NAME}'
                 sh  'docker logout'
              }                  
          }
        }     

    stage('Deploy to k8s') {
           steps {
              withKubeConfig([credentialsId: 'k8s-api-key']) {
                sh 'curl -LO "https://storage.googleapis.com/kubernetes-release/release/v1.20.5/bin/linux/amd64/kubectl"'  
                sh 'chmod u+x ./kubectl'  
                sh './kubectl get pods'
                //sh './kubectl patch  deployment service1 --patch \'{\"spec\":{\"template\": {\"metadata\": {\"creationTimestamp\": \"2021-06-16T10:11:12Z\" }}}}\' '
                sh '''
                  PT='{"spec":{"template":{"metadata":{"creationTimestamp":"'${CTS}'"}}}}'
                  ./kubectl patch  deployment service1  -p ${PT}
                '''
              }
               
           }
        }
        
    }
}
